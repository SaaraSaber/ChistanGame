<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_buy_ruby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_shape_background_ruby"
        android:gravity="center"
        android:layout_margin="@dimen/_12sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/text_coin"
            style="@style/text_ruby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:textColor="@color/planter" />

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/pic_ruby" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_buy_ruby"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:background="@drawable/vector_increase" />
</RelativeLayout>