<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_tittle_dialog" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vector_banner</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
    </style>

    <style name="text_body_dialog" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gardenGlow</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="text_ruby" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/planter</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="text_orange_dialog" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/exoticFlower</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
    </style>

    <style name="text_custom_toast" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_recycler_view_level" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="fontPath">fonts/lalezar_regular.ttf</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>